<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <Image
            Source="githublogo.png"
            HeightRequest="169"
            Aspect="AspectFit"
            SemanticProperties.Description="logo do github"/>

        <Label 
            Text="Notes app version 1.0"
            Padding="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="IraoGitBtn"
            Text="Visitar meu git" 
            SemanticProperties.Hint="Envia-te ao meu github"
            Clicked="IraoGitBtn_Clicked"
            HorizontalOptions="Fill" />

        <Label 
            Text="Desenvolvido por: Gustavo"
            Padding="10"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />




    </VerticalStackLayout>
</ContentPage>